{
  "manifest_version": 3,
  "name": "Salesforce Case Highlighter",
  "version": "1.1",
  "description": "Highlights Salesforce cases based on keywords and SLA age.",
  "permissions": ["storage"],
  "host_permissions": ["https://*.salesforce.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}